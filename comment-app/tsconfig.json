{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./tsbuild",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "noLib": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@i18n/translation": ["i18n/translation/zh.js"],
      "@tea/app": ["./node_modules/@tencent/tea-app"],
      "@tea/app/*": ["./node_modules/@tencent/tea-app/lib/*"],
      "@tea/component": ["./node_modules/@tencent/tea-component/lib"],
      "@tea/component/*": ["./node_modules/@tencent/tea-component/lib/*"],
      "@paas/paas-lib": ["./lib"],
      "@tencent/qcloud-lib": ["./lib/qcloud-lib"]
    }
  },
  "exclude": ["node_modules", "dist", "src/**/*/*.standalone.*", "tea-cli"],
  "compileOnSave": false
}